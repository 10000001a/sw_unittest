import java.util.*;

public class Book {
	public class bookDetail {
		private String id;
		private String title;
		private String author;
		private int issuedYear;
		
		public bookDetail(String newId, String newTitle, String newAuthor, int newIssuedYear) {
			this.id=newId;
			this.title=newTitle;
			this.author=newAuthor;
			this.issuedYear=newIssuedYear;
		}
	}
	
	ArrayList<bookDetail> books = new ArrayList<bookDetail>();
	
	this.books.add(new bookDetail("1", "자바 기초", "Jane", 2021));
	
	public void addBook(bookDetail newBook) {
		for(bookDetail book:books) {
			if(book.id==newBook.id) {
				throw new IllegalArgumentException("해당 ID("+newBook.id+")는 이미 존재합니다.");
			}
		}
		
		books.add(newBook);
		println("Book{"+ newBook+ "}가 추가되었습니다.")
	}
	
	public void searchBook(bookDetail)
}
