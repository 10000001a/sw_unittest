import java.util.*;

public class Book {
	public class bookDetail {
		private String id;
		private String title;
		private String author;
		private int issuedYear;
		
		public bookDetail(String newId, String newTitle, String newAuthor, int newIssuedYear) {
			this.id=newId;
			this.title=newTitle;
			this.author=newAuthor;
			this.issuedYear=newIssuedYear;
		}
	}
	
	ArrayList<bookDetail> books = new ArrayList<bookDetail>();
	
	void printBook(String id, String title, String author, int issuedYear, String extraStr) {
		System.out.println("Book{id: '"+id+"', 제목: '"+title+"', 저자: '"+author+"', 출판년도: "+issuedYear+extraStr);
	}
	
	public void addBook(String id, String title, String author, int issuedYear) {
		for(bookDetail book:books) {
			if(book.id==id) {
				throw new IllegalArgumentException("해당 ID("+id+") 는 이미 존재합니다.");
			}
		}
		books.add(new bookDetail(id, title, author, issuedYear));
		printBook(id,title,author,issuedYear, "도서가 추가되었습니다.");
		
	}
	
	public void searchBook(String id) {
		for(bookDetail book:books) {
			if(book.id==id) {
				System.out.println("검색 결과:");
				printBook(book.id, book.title, book.author, book.issuedYear, "");
				return;
			}
		}
		System.out.println("검색된 도서가 없습니다.");
	}
	
	public void removeBook(String id) {
		for(bookDetail book:books) {
			if(book.id==id) {
				printBook(book.id, book.title, book.author, book.issuedYear, "도서를 삭제하였습니다.");
				books.remove(book);
				return;
			}
		}
		System.out.println("해당 ID("+id+")의 도서를 찾을 수 없습니다.");
	}
}
